<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoMVVM.Views.DetalleProductoPage"
             Title="DetalleProductoPage">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Datos del un producto">
                    <EntryCell Text="{Binding IdProducto}"
                               Placeholder="Nombre"
                               IsEnabled="False"/>
                    <EntryCell Text="{Binding Nombre}"
                               Placeholder="Nombre"
                               IsEnabled="False"/>
                    <EntryCell Text="{Binding Cantidad}"                
                               Placeholder="Cantidad"
                               Keyboard="Numeric"
                               IsEnabled="False"/>
                    <EntryCell Text="{Binding Descripcion}"   
                               Placeholder="Descripcion"
                               IsEnabled="False"/>
                </TableSection>
            </TableRoot>
        </TableView>

        <Button Text="Editar Producto"
            Command="{Binding EditarProducto}"/>
        <Button Text="Eliminar Producto"
            Command="{Binding EliminarProducto}"/>
    </VerticalStackLayout>
</ContentPage>